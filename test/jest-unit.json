{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".unit.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "coverageReporters": ["json-summary", "text", "lcov"],
  "collectCoverageFrom": ["src/modules/**/services/**", "src/modules/**/controllers/**"]
}
